{
  "name": "terminal-manager",
  "displayName": "Terminal Manager",
  "description": "Zarządza terminalami w VSCode",
  "publisher": "mstasiowski",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc --watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test-cli"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Terminal Manager",
      "properties": {
        "terminalManager.terminals": {
          "type": "array",
          "description": "Lista terminali do zarządzania",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Nazwa terminala"
              },
              "commands": {
                "type": "array",
                "description": "Lista komend do wykonania w terminalu",
                "items": {
                  "type": "string"
                }
              },
              "autoStart": {
                "type": "boolean",
                "description": "Czy terminal ma się uruchamiać automatycznie"
              }
            },
            "autoSplit": {
              "type": "boolean",
              "description": "Czy terminal ma być uruchomiony w trybie split"
            },
            "required": [
              "name",
              "commands"
            ]
          },
          "default": []
        },
        "terminalManager.groups": {
          "type": "object",
          "description": "Grupy terminali",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {}
        },
        "terminalManager.keybindings": {
          "type": "object",
          "description": "Konfiguracja skrótów klawiszowych dla Terminal Manager",
          "properties": {
            "startAll": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Start All",
              "default": "ctrl+alt+s"
            },
            "stopAll": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Stop All",
              "default": "ctrl+alt+x"
            },
            "startTerminal": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Start Terminal",
              "default": "ctrl+alt+t"
            },
            "stopTerminal": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Stop Terminal",
              "default": "ctrl+alt+shift+t"
            },
            "startGroup": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Start Group",
              "default": "ctrl+alt+g"
            },
            "stopGroup": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Stop Group",
              "default": "ctrl+alt+shift+g"
            },
            "startSelected": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Start Selected",
              "default": "ctrl+alt+e"
            },
            "stopSelected": {
              "type": "string",
              "description": "Skrót klawiszowy dla komendy Stop Selected",
              "default": "ctrl+alt+shift+e"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "terminalManager.startAll",
        "title": "Terminals: Start All"
      },
      {
        "command": "terminalManager.stopAll",
        "title": "Terminals: Stop All"
      },
      {
        "command": "terminalManager.startTerminal",
        "title": "Terminals: Start Terminal"
      },
      {
        "command": "terminalManager.stopTerminal",
        "title": "Terminals: Stop Terminal"
      },
      {
        "command": "terminalManager.startGroup",
        "title": "Terminals: Start Group"
      },
      {
        "command": "terminalManager.stopGroup",
        "title": "Terminals: Stop Group"
      },
      {
        "command": "terminalManager.startSelected",
        "title": "Terminals: Start Selected"
      },
      {
        "command": "terminalManager.stopSelected",
        "title": "Terminals: Stop Selected"
      },
      {
        "command": "terminalManager.startSplitTerminals",
        "title": "Terminals: Start AutoSplit Terminals"
      }
    ],
    "keybindings": [
      {
        "command": "terminalManager.startAll",
        "key": "alt+1",
        "when": "true"
      },
      {
        "command": "terminalManager.stopAll",
        "key": "alt+2",
        "when": "true"
      },
      {
        "command": "terminalManager.startTerminal",
        "key": "alt+3",
        "when": "true"
      },
      {
        "command": "terminalManager.stopTerminal",
        "key": "alt+4",
        "when": "true"
      },
      {
        "command": "terminalManager.startGroup",
        "key": "alt+5",
        "when": "true"
      },
      {
        "command": "terminalManager.stopGroup",
        "key": "alt+6",
        "when": "true"
      },
      {
        "command": "terminalManager.startSelected",
        "key": "shift+1",
        "when": "true"
      },
      {
        "command": "terminalManager.stopSelected",
        "key": "shift+2",
        "when": "true"
      }
    ]
  }
}
